<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetFinal.Connexion">
    <ContentPage.Content>
        <StackLayout>
            <Image HorizontalOptions="Center" x:Name="imageTitre" 
                   Aspect="AspectFit" Margin="0, 0, 0, 20" 
                   WidthRequest="120" HeightRequest="120"/>
            <Label Style="{StaticResource titre}" Text="Web-Keeper"/>
            <Label Style="{StaticResource sousTitre}" Text="version 1.0.1" />
            <Label Style="{StaticResource sousTitre}" Text="Développé par Cavalera-Laverdiere Inc." />
            <Label Style="{StaticResource controle}" Text="Adresse courriel" />
            <Entry Keyboard="Email" Placeholder="Adresse courriel" PlaceholderColor="{StaticResource black}" x:Name="txtAdresseCourriel"/>
            <Label Style="{StaticResource controle}" Text="Mot de passe" />
            <Entry IsPassword="True" Placeholder="Mot de passe" PlaceholderColor="{StaticResource black}" x:Name="txtMotDePasse"/>
            <Button Text="Connexion" x:Name="btnConnexion" Clicked="btnConnexion_Clicked"/>
            <Button Style="{StaticResource lien}" Text="Nouveau compte" x:Name="btnCreerCompte" Clicked="btnCreerCompte_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>